        $.ajax({
            type: "POST",
            url: "/MainPage/LoadData",
            data: "id=" + selected_val,
            success: function (data) {
                if (data.length > 0) {
                    $('#Layout').val(data[0]);
                }
                else {
                    $('#Layout').val('');
                }
            }
        });
    }
</script>

